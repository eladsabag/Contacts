<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/white"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_user" />

        <EditText
            android:id="@+id/login_EDT_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:drawableEnd="@drawable/ic_open_mail"
            android:hint="Email"
            android:backgroundTint="#B70A92EC"
            android:inputType="textEmailAddress"
            android:textColorHint="#ACACAC"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/login_EDT_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:drawableEnd="@drawable/ic_lock"
            android:hint="Password"
            android:backgroundTint="#B70A92EC"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textColorHint="#ACACAC"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_BTN_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#B70A92EC"
            android:text="Sign in"
            android:textSize="15sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/white"
            app:icon="@drawable/ic_signin"
            app:iconGravity="start"
            app:iconSize="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/login_TXT_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Don't have an account? create your account."
            android:textSize="12sp"
            android:textColor="#ACACAC"
            android:clickable="true"
            android:focusable="true"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/login_TXT_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:drawableStart="@drawable/ic_error"
            android:text="Something went wrong. Please type correct details!"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:visibility="invisible"/>
    </LinearLayout>

</RelativeLayout>